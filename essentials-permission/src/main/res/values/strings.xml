<resources>
    <string name="es_no_root">Your device is not rooted!</string>

    <string name="es_request_permission_title">Required permissions</string>
    <string name="es_grant">Grant</string>

    <string name="es_find_app_here">Find %s here</string>
    <string name="es_grant_permission_manually">Couldn\'t open settings screen! Please grant the permission manually</string>

    <!-- Secure settings dialog -->
    <string name="es_secure_settings_title">Permission required</string>
    <string name="es_pref_secure_settings_header_summary">The WRITE_SECURE_SETTINGS permission is required to write system settings</string>
    <string name="es_pref_use_root">Grant using root</string>
    <string name="es_pref_use_root_summary">Use root to grant the permission</string>
    <string name="es_pref_use_pc">Grant using PC</string>
    <string name="es_pref_use_pc_summary">Connect to a PC to grant the permission with ADB.\nNote that ADB simply is a developers tool and it will not void the warranty unlike root.</string>

    <!-- Secure settings instructions -->
    <string name="es_secure_settings_pc_instructions_title">PC instructions</string>
    <string name="es_pref_secure_settings_pc_instructions_header_summary">Follow the instructions to grant the permission with a PC (Windows, Mac or Linux)</string>

    <string name="es_pref_secure_settings_step_1">1 - Activate the developer options</string>
    <string name="es_pref_secure_settings_step_1_summary">Go to Android-Settings -> Phone Info -> Search for Build Number and tap multiple times until the Developer options are active. Click to open</string>

    <string name="es_pref_secure_settings_step_2">2 - Enable USB-Debugging</string>
    <string name="es_pref_secure_settings_step_2_summary">Go to Android-Settings -> Developer Options -> Enable USB-Debugging. Click to open</string>

    <string name="es_pref_secure_settings_step_3">3 - Install ADB on your PC</string>
    <string name="es_pref_secure_settings_step_3_summary">Use one of the following tutorials to learn more about how to install ADB</string>
    <string name="es_pref_secure_settings_link_gadget_hacks_summary">Gadget-Hacks (click to open)</string>
    <string name="es_pref_secure_settings_link_lifehacker_summary">Lifehacker (click to open)</string>
    <string name="es_pref_secure_settings_link_xda_summary">XDA Developers (click to open)</string>

    <string name="es_pref_secure_settings_step_4">4 - Execute the ADB Command</string>
    <string name="es_pref_secure_settings_step_4_summary">adb shell pm grant %s android.permission.WRITE_SECURE_SETTINGS\n\n(click to copy)</string>

    <string name="es_secure_settings_no_root">Your device is not rooted you have to use your PC to grant permissions</string>

    <string name="es_secure_settings_permission_denied">Permission denied! Make sure to follow the steps above</string>
    <string name="es_secure_settings_permission_granted">Permission granted! Where good to go now</string>
</resources>